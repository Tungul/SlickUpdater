<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SlickUpdater.log"
        Title="log" Background="{x:Null}" d:DesignHeight="360" d:DesignWidth="500" MinWidth="500" MinHeight="360" Height="360" Width="500">
    <Grid Margin="0,0,0,0" Background="#FF323232">
        <TextBox x:Name="logwindow" TextWrapping="Wrap" Text="Slick Updater BETA v.X.x" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="10,10,10,33"/>
        <Button x:Name="clear" Content="Clear" Margin="0,0,10,10" Click="Button_Click_1" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="copy" Content="Copy to clipboard" HorizontalAlignment="Left" Margin="90,0,0,10" Width="113" Click="copy_Click" Height="18" VerticalAlignment="Bottom"/>
        <Button x:Name="updatelog" Content="Update Log" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Click="updatelog_Click" Height="18" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
