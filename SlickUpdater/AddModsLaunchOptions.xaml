<Window x:Class="SlickUpdater.AddModsLaunchOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddModsLaunchOptions" Height="291" Width="443" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid Background="#FF3A3A3A">
        <ListView x:Name="folders" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="183">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Folders"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="added" HorizontalAlignment="Left" Height="227" Margin="244,0,0,0" VerticalAlignment="Top" Width="183">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="170" Header="Added"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btn_done" Content="Done" HorizontalAlignment="Left" Margin="363,232,0,0" VerticalAlignment="Top" Width="64" Click="btn_done_Click"/>
        <Button x:Name="btn_removeitem" Content="Remove item" HorizontalAlignment="Left" Margin="244,232,0,0" VerticalAlignment="Top" Width="114" Click="btn_removeitem_Click"/>
        <Button x:Name="btn_add" Content="Add -&gt;" HorizontalAlignment="Left" Margin="187,67,0,0" VerticalAlignment="Top" Width="54" Click="btn_add_Click"/>

    </Grid>
</Window>
